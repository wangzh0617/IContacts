<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="Theme.MainCustom" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:actionButtonStyle">@style/CustomActionButtonStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--  
        <item name="android:actionOverflowButtonStyle">@style/CustomActionOverflowButtonStyle</item>
        -->
        <!-- Change home button background -->
        <item name="android:selectableItemBackground">@drawable/action_btn_background</item>
    </style>
    
    
     <!-- 自定义窗口样式，需要带ActionBar -->
    <style name="Theme.ContactDetailCustom" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/detail_bar</item>
         <!-- Change home button background -->
        <item name="android:selectableItemBackground">@drawable/action_btn_background</item>
    </style>

</resources>