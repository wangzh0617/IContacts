<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
     android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/detail_number"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
         />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/dialer_dial_icon_dark" />

    <TextView
        android:id="@+id/tv_item_numberAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_item_number"
        android:layout_alignBottom="@+id/tv_item_number"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/tv_item_number"
        android:textColor="@color/detail_typeaddress"
        />

    <TextView
        android:id="@+id/tv_item_numberYLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_item_numberAddress"
        android:layout_alignBottom="@+id/tv_item_numberAddress"
        android:layout_toRightOf="@+id/tv_item_numberAddress"
        android:textColor="@color/detail_typeaddress"
         />

</RelativeLayout>

</LinearLayout>
