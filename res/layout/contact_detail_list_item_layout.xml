<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/layout_detail_btn_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" 
            android:background="@drawable/action_btn_background">

            <TextView
                android:id="@+id/tv_detail_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/detail_number"
                android:textSize="18sp" 
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                >

                <TextView
                    android:id="@+id/tv_detail_item_numberType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_typeaddress"
                    android:textSize="13sp" 
                    />

                <TextView
                    android:id="@+id/tv_detail_item_numberAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/detail_typeaddress"
                    android:textSize="13sp" 
                    />
                
                <TextView
                    android:id="@+id/tv_detail_item_numberYLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_typeaddress"
                    android:textSize="13sp" 
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_detail_item_btnmsg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center" 
            android:background="@drawable/action_btn_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_msg_icon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>